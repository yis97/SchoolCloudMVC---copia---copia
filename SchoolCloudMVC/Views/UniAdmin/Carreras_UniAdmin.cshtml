@using SchoolCloudMVC.BO
@model UniversidadAccseso
@{
    ViewBag.Title = "Carreras_UniAdmin";
    Layout = "~/Views/Shared/MasterPageUni.cshtml";
}
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Registrar usuarios</h3>
            </div>
            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">

            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">

                        <h2>Registrar Carrera <small></small></h2>
                        <div class="clearfix"></div>
                    </div>

                    <div class="x_content">
                        <br />
                        <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">

                            <div id="nombreuni">

                            </div>

                        </form>
                    </div>
                </div>



            </div>
        </div>
        @*Tabla de usuarios*@
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">

                        <h2>Lista de Carreras<small>School Cloud</small></h2>
     
                        <div class="clearfix"></div>
                    </div>

                    <div class="x_content">
                        <br />
             
                            <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
                                <div class="table-responsive">
                                    <table id="TablaCarreras" class="table table-striped jambo_table bulk_action">

                                    </table>
                                </div>
                            </form>
                    
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<script type="text/javascript">
         (function () {//Función anónima autoejecutable
             $("#nombreuni").load('/VistasParciales/NombreCarrera');
             $("#TablaCarreras").load('/VistasParciales/_TablaUniversidadCarreras/@(Model.idUsuario> 0 ? "" + Model.idUniversidad : "" )');
         }());
</script>
