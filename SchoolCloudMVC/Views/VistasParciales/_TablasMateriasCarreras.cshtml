@using System.Data
@model DataTable
@{
    ViewBag.Title = "_TablasMateriasCarreras";
}
<table id="ListaCarreras" class="table table-striped table-bordered">
    <thead>
        <tr>
     
            <th>Materias</th>
            <th>Fecha de Registro</th>
            <th>Turno</th>
            <th>Grado Escolar</th>
            <th>Acciones</th>
           
        </tr>
    </thead>

    <tbody>
@foreach (DataRow row in Model.Rows)
{
        <tr>
         
            <td> @row["Materias"]</td>
            <td>@row["FechaRegistro"]</td>
            <td>@row["Turno"]</td>
            <td>@row["GradoEscolar"]</td>
          <td>
<a  class="btn btn-info btn-xs"  onclick="llena_datos('@row["IDmateria"]','@row["Materias"]','@row["Turno"]','@row["ID"]','@row["IDciclo"]','@row["IDunicarrera"]')"><i class="fa fa-pencil"></i> Editar </a>
<a  onclick="abre_modal_eliminar(@row["IDmateria"])" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </a>
          </td>
        </tr>

     
}
    </tbody>
</table>
