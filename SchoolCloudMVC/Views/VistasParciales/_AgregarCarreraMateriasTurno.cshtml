@using SchoolCloudMVC.BO
@model CarrerasMaterias
@{
    ViewBag.Title = "_AgregarCarreraMateriasTurno";
}
@using (Ajax.BeginForm("Guardar", "VistasParciales", new AjaxOptions { }))
{
<form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
        Nombre de la Materia <span class="required"></span>
    </label>
    <div class="form-group col-md-9 col-sm-9 col-xs-12">
        @Html.TextBoxFor(x => x.Materia, null, new { @class = "form-control col-md-7 col-xs-12", @required = "required" })
    </div>
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
        Ciclo Escolar <span class="required"></span>
    </label>
    <div class="form-group col-md-9 col-sm-9 col-xs-12">
        <div id="tipoCicloEscolar">

        </div>
    </div>
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
        Turno <span class="required"></span>
    </label>
    <div class="form-group col-md-9 col-sm-9 col-xs-12">
        @Html.TextBoxFor(x => x.Turno, null, new { @class = "form-control col-md-7 col-xs-12", @required = "required" })
    </div>
</form>
}
<script type="text/javascript">
    (function () {//Función anónima autoejecutable
        $("#tipoCicloEscolar").load('/VistasParciales/_ListaCicloEscolar');
    })
</script>
